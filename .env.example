# KitchenSync Environment Variables
# Copy this file to .env.local and fill in your actual values

# Firebase Configuration
# Get these from Firebase Console > Project Settings > General
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Google Calendar API
# Get these from Google Cloud Console > APIs & Services > Credentials
VITE_GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
VITE_GOOGLE_CALENDAR_API_KEY=your-google-api-key

# Google Photos API
# Same Google Cloud Console project, different scope
VITE_GOOGLE_PHOTOS_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# OpenAI API (for email-to-calendar parsing, Phase 2)
VITE_OPENAI_API_KEY=sk-your-openai-api-key

# Development
VITE_HOUSEHOLD_ID=demo-family-001
VITE_ENV=development

# Optional: Firebase Emulator (for local development/testing)
# VITE_USE_FIREBASE_EMULATOR=true
# VITE_FIRESTORE_EMULATOR_HOST=localhost:8080
# VITE_AUTH_EMULATOR_HOST=localhost:9099

# Optional: Logging & Monitoring
# VITE_SENTRY_DSN=your-sentry-dsn
# VITE_ENABLE_ANALYTICS=false
